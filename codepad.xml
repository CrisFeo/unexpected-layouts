<?xml version="1.0" encoding="utf-8"?> 
<keyboard
  name="Codepad"
  script="latin"
  bottom_row="false"
>
<row>
<key c="q" n="1" s="!"/>
<key c="w" n="2" s="\@"/>
<key c="e" n="3" s="\#"/>
<key c="r" n="4" s="$"/>
<key c="t" n="5" s="%"/>
<key c="y" n="6" s="^"/>
<key c="u" n="7" s="&amp;"/>
<key c="i" n="8" s="*"/>
<key c="o" n="9" s="("/>
<key c="p" n="0" s=")"/>
</row>
<row>
<key width="0.5" c="shift"/>
<key c="a" n="`" s="copy"/>
<key c="s" n="~" s="paste"/>
<key c="d" s="selectAll"/>
<key c="f" n="-" s="_"/>
<key
  c="g"
  n="cursor_up"
  e="cursor_right"
  w="cursor_left"
  s="cursor_down"
/>
<key c="h" n="=" s="+"/>
<key c="j" n="{" s="["/>
<key c="k" n="}" s="]"/>
<key c="l" n="|" s="\\"/>
<key width="0.5" c="shift"/>
</row>
<row>
<key width="1.5" c="tab" nw="capslock"/>
<key c="z"/>
<key c="x"/>
<key c="c" n="&lt;" s="."/>
<key c="v" n="&gt;" s=","/>
<key c="b" n="\?" s="/"/>
<key c="n" n=":" s=";"/>
<key c="m" n="&quot;" s="'"/>
<key width="1.5" c="backspace" ne="delete"/>
</row>
<row>
<key width="1.5" c="ctrl" nw="switch_emoji"/>
<key width="1.5" c="alt" nw="config"/>
<key
  width="4.0"
  c="space"
  e="cursor_right"
  w="cursor_left"
  s="switch_forward"
/>
<key width="1.5" c="esc" ne="switch_numeric"/>
<key width="1.5" c="enter" ne="action"/>
</row>
</keyboard>
