<?xml version="1.0" encoding="utf-8"?> 
<keyboard name="Codepad" script="latin" bottom_row="false">
<row>
<key c="q" n="1" s="~"/>
<key c="w" n="2" s="\@"/>
<key c="e" n="3" s="\#"/>
<key c="r" n="4" s="$"/>
<key c="t" n="5" s="%"/>
<key c="y" n="6" s="^"/>
<key c="u" n="7" s="&amp;"/>
<key c="i" n="8" s="*"/>
<key c="o" n="9" sw="(" se=")"/>
<key c="p" n="0" s="!"/>
</row>
<row>
<key width="0.5" c="shift"/>
<key c="a" n="`" s="copy"/>
<key c="s" s="paste"/>
<key c="d" s="selectAll"/>
<key c="f" n="-" s="_"/>
<key c="g" n="up" e="right" w="left" s="down"/>
<key c="h" n="=" s="+"/>
<key c="j" n="{" s="["/>
<key c="k" n="}" s="]"/>
<key c="l" n="|" s="\\"/>
<key width="0.5" c="shift"/>
</row>
<row>
<key width="1.5" c="tab"/>
<key c="z"/>
<key c="x"/>
<key c="c" n="&lt;" s="."/>
<key c="v" n="&gt;" s=","/>
<key c="b" n="\?" s="/"/>
<key c="n" n=":" s=";"/>
<key c="m" n="&quot;" s="'"/>
<key width="1.5" c="backspace" ne="delete"/>
</row>
<row>
<key width="1.5" c="ctrl" ne="meta" sw="switch_emoji" se="switch_numeric"/>
<key width="1.5" c="alt" ne="fn" se="config"/>
<key width="4.0" c="space" w="cursor_left" e="cursor_right" s="switch_forward"/>
<key width="1.5" c="esc"/ >
<key width="1.5" c="enter" ne="action"/>
</row>
</keyboard> 
